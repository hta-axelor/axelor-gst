<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://axelor.com/xml/ns/object-views
  http://axelor.com/xml/ns/object-views/object-views_5.0.xsd">

	<grid id="gst-company-grid" name="company-grid" title="Companies"
		model="com.axelor.apps.base.db.Company">
		<field name="name" />
		<field name="code" x-bind="{{code|unaccent|uppercase}}" />
		<field name="address" form-view="address-form" grid-view="address-grid" />
	</grid>

	<form id="gst-company-form" extension="true" name="company-form"
		title="Company" model="com.axelor.apps.base.db.Company" onSave="action-company-check-multi-banks">
		<panel name="gstPanel" title="GST" sidebar="true" if="__config__.app.isApp('gst')" if-module="axelor-gst">
			<field name="gstin" colSpan="12" />
		</panel>
	</form>

</object-views>
