<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://axelor.com/xml/ns/object-views http://axelor.com/xml/ns/object-views/object-views_5.0.xsd">

	<grid name="state-grid" title="State" model="com.axelor.apps.gst.db.State">
		<field name="stateSeq" />
		<field name="name" />
		<field name="country" />
	</grid>

	<form name="state-form" title="State" model="com.axelor.apps.gst.db.State" onNew="action-gst-record-address-state-country-default">
	 <toolbar>
	      <button name="sendByEmailBtn" title="Send Email" icon="fa-envelope" onClick="action-send-by-email-with-template"/>
	    </toolbar>
		<panel>
			<field name="stateSeq" showTitle="false" colSpan="12" showIf="id">
				<viewer depends="stateSeq"><![CDATA[
     			 <h3>
                   <span>{{record.stateSeq}}</span>
                 </h3>
    			]]></viewer>
			</field>
			<field name="name" />
			<field name="country" />
		</panel>
	</form>


	<action-record name="action-gst-record-address-state-country-default"
		model="com.axelor.apps.gst.db.State">
		<field name="country" expr="eval: __parent__?.addressL7Country" />
	</action-record>

</object-views>