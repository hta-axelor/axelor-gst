<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://axelor.com/xml/ns/object-views
  http://axelor.com/xml/ns/object-views/object-views_5.0.xsd">

	<form name="create-invoice-wizard-form" model="com.axelor.apps.base.db.Wizard" title="Create Invoice" width="large">
		<panel>
			<field name="company" canEdit="false" />
			<field name="partner" canEdit="false" />
		</panel>
		<panel name="actionsPanel" sidebar="true" title="Actions">
			<button name="generateInvoice" title="Generate Invoice" onClick="action-gst-invoice-group-show-invoice-btn-on-click"/>
	  	</panel>
    </form>
    
    <action-group name="action-gst-invoice-group-show-invoice-btn-on-click">
		<action name="action-gst-invoice-form-validate" />
		<action name="action-gst-method-product-create-invoice" />
		<action name="close" />
	</action-group>

	<action-validate name="action-gst-invoice-form-validate">
		<error message="Please enter all field" if="!(company &amp;&amp; partner)" />
	</action-validate>
	
	<action-method name="action-gst-method-product-create-invoice">
		<call class="com.axelor.apps.gst.web.ProductController" method="createInvoice" />
	</action-method>

</object-views>
